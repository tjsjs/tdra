<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5ebeb"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/tv_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="#faf8f8"
            android:textSize="25dp" />
        <EditText
            android:id="@+id/et_show"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"/>
    </RelativeLayout>
    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_show"
        android:layout_marginTop="100dp"
        android:columnCount="4"
        android:horizontalSpacing="0dp"
        android:orientation="horizontal"
        android:stretchMode="none">

        <Button
            android:id="@+id/btn_qingling"
            android:layout_height="wrap_content"
            android:text="AC"
            android:textColor="#ffffff"
            android:textSize="20dp" />
        <Button

            android:id="@+id/btn_kh1"
            android:layout_height="wrap_content"
            android:text="("
            android:textColor="#ffffff"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_kh2"
            android:layout_height="wrap_content"
            android:text=")"
            android:textColor="#ffffff"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_chu"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="#ffffff"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_7"
            android:layout_height="wrap_content"
            android:text="7"
            android:textColor="#ffffff"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_8"
            android:layout_height="wrap_content"
            android:text="8"
            android:textColor="#ffffff"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_9"
            android:layout_height="wrap_content"
            android:text="9"
            android:textColor="#ffffff"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_cheng"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#ffffff"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_4"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_5"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="5"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_6"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="6"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_jian"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="-"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_1"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="1"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_2"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="2"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_3"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#ffffff"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_jia"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_0"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_chehui"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textColor="#ffffff"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_dengyu"
            android:layout_height="wrap_content"
            android:text="="
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </GridLayout>
</LinearLayout>
